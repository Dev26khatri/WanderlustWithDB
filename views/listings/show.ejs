<% layout('/layouts/boilerplate.ejs') -%>

<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3>Listing Details</h3>
  </div>

  <div class="card col-6 offset-3 show-card">
    <img src="<%= listings.image %>" alt="..." class="card-img-top show-img" />
    <div class="card-body">
      <p class="card-text">
        <b><%= listings.title %></b>
        <br />
        <%= listings.description %> <br />
        &#8377;<%= listings.price %> <br />
        <%= listings.location %> <br />
        <%= listings.country %>
      </p>
    </div>
  </div>

  <div class="btns mb-3 mt-4">
    <a
      href="/listings/<%= listings._id %>/edit"
      class="btn btn-dark col-1 offset-3"
    >
      Edit
    </a>
    <form action="/listings/<%= listings._id %>?_method=DELETE" method="POST">
      <button class="btn btn-dark offset-4 edit-btn">Delete</button>
    </form>
  </div>
</div>
