<% layout('/layouts/boilerplate.ejs') %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit Listing</h3>
    <form action="/listings/<%= listing._id %>?_method=PUT" method="POST">
      <div class="mb-3">
        <label for="title" class="form-lable">Title</label>
        <input
          type="text"
          name="listing[title]"
          value="<%= listing.title %>"
          class="form-control"
        />
      </div>
      <div class="mb-3">
        <label for="description" class="form-lable">Description</label>
        <textarea type="text" name="listing[description]" class="form-control">
<%= listing.description %> </textarea
        >
      </div>
      <div class="mb-3">
        <label for="image" class="form-lable">Image Link</label>

        <input
          type="text"
          value="<%= listing.image %>"
          name="listing[image]"
          placeholder="Enter Image URL/Link"
          class="form-control"
        />
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-lable">Price</label>

          <input
            type="number"
            value="<%= listing.price %>"
            class="form-control"
            name="listing[price]"
            placeholder="Enter price"
          />
        </div>
        <div class="mb-3 col-md-8">
          <label for="location" class="form-lable">Location</label>
          <input
            type="text"
            name="listing[location]"
            placeholder="Enter location"
            class="form-control"
            value="<%= listing.location %>"
          />
        </div>
      </div>
      <div class="mb-3">
        <label for="Country" class="form-lable">Country</label>
        <input
          class="form-control"
          type="text"
          value="<%= listing.country %>"
          name="listing[country]"
          placeholder="Enter Country"
        />
      </div>
      <button class="btn btn-dark mb-3 edit-btn">Submit</button>
    </form>
  </div>
</div>
