<% layout("/layouts/boilerplate") %>
<body>
  <div class="row">
    <div class="col-8 offset-2">

      <h3>Create A New Listing</h3>
      <form method="post" action="/listings" enctype="multipart/form-data" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="title" class="form-lable">Title</label>
          <input
            type="text"
            name="listing[title]"
            placeholder="Enter Title"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please Enter Valid</div>
          <div class="valid-feedback">This is Good</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-lable">Description</label>
          <textarea
            type="text"
            name="listing[description]"
            placeholder="Enter Description "
            class="form-control"
            required
          ></textarea>
            <div class="invalid-feedback">Please Fill short and Sweet Description</div>
            <div class="valid-feedback">This is the short and sweet!</div>

        </div>
        <!-- <div class="mb-3">
          <label for="image" class="form-lable">Image Link</label>
    
          <input
            type="text"
            name="listing[image]"
            placeholder="Enter Image URL/Link"
            class="form-control"
          />
            <div class="valid-feedback">This is Perfect URL</div>

        </div> -->
        <div class="mb-3">
          <label for="image" class="form-lable">Upload Image </label>
          <input
            type="file"
            name="listing[image]"
            placeholder="Enter Image URL/Link"
            class="form-control"
            required
          />
        <div class="valid-feedback">This is Perfect URL</div>
       </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-lable">Price</label>
      
            <input   class="form-control" name="listing[price]"
            placeholder="Enter price" required/>
            <div class="invalid-feedback">This is not a Valid input</div>
            <div class="valid-feedback">This is the perfect input</div>

          </div>
          <div class="mb-3 col-md-8">
            <label for="location" class="form-lable">Location</label>
            <input
              type="text"
              name="listing[location]"
              placeholder="Enter location"
              class="form-control"
              required
            />
            <div class="invalid-feedback"> Locaiton Should be Valid </div>
            <div class="valid-feedback">This is the Perfect</div>


          </div>
        </div>
        <div class="mb-3">
          <label for="Country" class="form-lable">Country</label>
          <input
            class="form-control"
            type="text"
            name="listing[country]"
            placeholder="Enter Country"
            required
          />
            <div class="invalid-feedback">Country name should be valid</div>
            <div class="valid-feedback">Ohk This is right</div>


        </div>
        <button class="btn btn-dark add-btn mb-3 mt-3" >Create</button>
    </div>
  </div>
  </form>
</body>
